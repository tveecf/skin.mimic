<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="Topbar">

		<control type="group">
			<visible>!Control.IsVisible(509)</visible>
			<control type="image">
				<visible>[Control.IsVisible(59) | Control.IsVisible(501)] +
					!$EXP[isInfoDialog]
				</visible>
				<width>FullScreenWidth</width>
				<height>80</height>
				<texture>background.png</texture>
				<colordiffuse>background</colordiffuse>
			</control>
			<control type="image">
				<width>FullScreenWidth</width>
				<height>80</height>
				<colordiffuse>33000000</colordiffuse>
				<texture>menu_fo.png</texture>
				<aspectratio>stretch</aspectratio>
				<visible>!Skin.HasSetting(TopbarHideBackground)</visible>
			</control>
			<control type="grouplist">
				<left>20</left>
				<top>0</top>
				<width>1200</width>
				<height>80</height>
				<orientation>horizontal</orientation>
				<itemgap>20</itemgap>
				<control type="button">
					<visible>Skin.HasSetting(Enable.TouchScreen)</visible>
					<width>80</width>
					<height>80</height>
					<onclick>Back</onclick>
					<texturefocus colordiffuse="white">special://skin/extras/icons/back.png</texturefocus>
			       	<texturenofocus colordiffuse="white">special://skin/extras/icons/back.png</texturenofocus>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<animation effect="fade" start="0" end="100" time="150">VisibleChange</animation>
				</control>
				<control type="image">
					<width>60</width>
					<height>80</height>
					<texture colordiffuse="white">$VAR[HeaderIcon]</texture>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<animation effect="fade" start="0" end="100" time="150">VisibleChange</animation>
				</control>
<!-- 				<control type="label"> -->
<!-- 					<width>auto</width> -->
<!-- 					<align>left</align> -->
<!-- 					<aligny>center</aligny> -->
<!-- 					<font>cirrus_30</font> -->
<!-- 					<textcolor>highlight</textcolor> -->
<!-- 					<label>$INFO[ListItem.DBTYPE] : $INFO[ListItem.FolderPath]</label> -->
<!-- 					<scroll>false</scroll> -->
<!-- 				</control> -->
				<control type="label">
					<width>auto</width>
					<align>left</align>
					<aligny>center</aligny>
					<font>cirrus_30</font>
					<textcolor>highlight</textcolor>
					<label>•</label>
					<scroll>false</scroll>
				</control>
				<control type="label">
				<visible>![Window.IsActive(movieinformation)|Window.IsActive(musicinformation)|Window.IsActive(songinformation)|Window.IsActive(addoninformation)]</visible>
					<width>auto</width>
					<align>left</align>
					<aligny>center</aligny>
					<font>cirrus_30</font>
					<textcolor>white</textcolor>
					<label>$VAR[BreadcrumbsVar]</label>
					<scroll>false</scroll>
				</control>
				<control type="label">
					<visible>[Window.IsActive(movieinformation)|Window.IsActive(musicinformation)|Window.IsActive(songinformation)|Window.IsActive(addoninformation)]</visible>
					<width>auto</width>
					<align>left</align>
					<aligny>center</aligny>
					<font>cirrus_30</font>
					<textcolor>white</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<label2>$VAR[HeaderSubLabelInfoDialog]</label2>
				</control>
				<control type="label">
					<visible>[Window.IsActive(movieinformation)|Window.IsActive(musicinformation)|Window.IsActive(songinformation)|Window.IsActive(addoninformation)]</visible>
					<width>auto</width>
					<align>left</align>
					<aligny>center</aligny>
					<font>cirrus_30</font>
					<textcolor>highlight</textcolor>
					<label>$VAR[HeaderSubLabelInfoDialog]</label>
				</control>
			</control>
			<control type="grouplist">
				<left>1100</left>
				<top>0</top>
				<width>800</width>
				<height>80</height>
				<align>right</align>
				<orientation>horizontal</orientation>
				<itemgap>20</itemgap>
				<control type="label">
					<width>auto</width>
					<align>left</align>
					<aligny>center</aligny>
					<font>font31</font>
					<textcolor>white</textcolor>
					<label>$INFO[System.Date]</label>
					<scroll>false</scroll>
				</control>
				<control type="label">
					<width>auto</width>
					<align>left</align>
					<aligny>center</aligny>
					<font>cirrus_30</font>
					<textcolor>highlight</textcolor>
					<label>•</label>
					<scroll>false</scroll>
				</control>
				<!-- weather icon when weather addon provies remote image -->
				<control type="image">
					<width>30</width>
					<height>80</height>
					<visible>!Skin.HasSetting(HideTopbarWeather) + String.IsEmpty(Window(weather).Property(Alerts.IsFetched)) + Skin.HasSetting(Enable.RemoteWeatherIcons)</visible>
					<aspectratio scalediffuse="false" align="center" aligny="center">keep</aspectratio>
					<texture background="true">$INFO[Window(weather).Property(Current.RemoteIcon)]</texture>
				</control>
				<!-- weather icon when using only local mapped icons -->
				<control type="image">
					<width>30</width>
					<height>80</height>
					<visible>!Skin.HasSetting(HideTopbarWeather) + String.IsEmpty(Window(weather).Property(Alerts.IsFetched)) + !Skin.HasSetting(Enable.RemoteWeatherIcons)</visible>
					<aspectratio scalediffuse="false" align="center"
						aligny="center">keep</aspectratio>
					<texture background="true">$VAR[WeatherIconVar]$INFO[Window(weather).Property(Current.FanartCode),,.png]</texture>
				</control>
				<control type="label">
					<description>weather alerts</description>
					<width>auto</width>
					<align>left</align>
					<aligny>center</aligny>
					<font>font31</font>
					<textcolor>yellow</textcolor>
					<label>[B]!!![/B]</label>
					<visible>!Skin.HasSetting(HideTopbarWeather) + !String.IsEmpty(Window(weather).Property(Alerts.IsFetched))</visible>
				</control>

				<control type="label">
					<width>auto</width>
					<align>left</align>
					<aligny>center</aligny>
					<font>font31</font>
					<textcolor>white</textcolor>
					<label>[B]$INFO[Weather.Temperature][/B]</label>
					<scroll>false</scroll>
					<visible>!Skin.HasSetting(HideTopbarWeather) + Weather.IsFetched
					</visible>
				</control>
				<control type="label">
					<width>auto</width>
					<align>left</align>
					<aligny>center</aligny>
					<font>cirrus_30</font>
					<textcolor>highlight</textcolor>
					<label>•</label>
					<scroll>false</scroll>
					<visible>!Skin.HasSetting(HideTopbarWeather) + Weather.IsFetched
					</visible>
				</control>
				<control type="label">
					<width>auto</width>
					<align>left</align>
					<aligny>center</aligny>
					<font>font31</font>
					<textcolor>white</textcolor>
					<label>$INFO[System.Time]</label>
					<scroll>false</scroll>
				</control>
			</control>
		</control>
 
		<!-- Now Playing info -->

	<control type="group">
		<visible>!Control.IsVisible(509) + [Player.Playing | Player.HasAudio
			| Player.HasVideo]
		</visible>
		<width>FullScreenWidth</width>
		<top>80</top>
		<height>120</height>

		<control type="image">
			<visible>[Control.IsVisible(59) | Control.IsVisible(501)] +
				!$EXP[isInfoDialog]
			</visible>
			<texture>background.png</texture>
			<colordiffuse>background</colordiffuse>
		</control>

		<control type="image">
			<texture>menu_fo.png</texture>
			<colordiffuse>33000000</colordiffuse>
		</control>

		<control type="group">
			<top>-8</top>
			<left>40</left>
			<right>40</right>

			
			<control type="image">
				<description>Now Playing Thumb</description>
				<height>100</height>
				<width>100</width>
				<left>1720</left>
				<top>-10</top>
				<aspectratio align="center" aligny="center"
					scalediffuse="false">keep</aspectratio>
				<texture diffuse="diffuse/nowplaying.png">$VAR[TopbarNowPlayingThumb]</texture>
<!-- 
				<visible>[!Window.IsVisible(volumebar) +
					[!Window.IsVisible(extendedprogressdialog) |
					Window.IsVisible(script-globalsearch-main.xml) |
					Window.IsVisible(script-globalsearch-infodialog.xml) |
					Window.IsVisible(favourites)]] | [Player.Muted +
					!Window.IsVisible(extendedprogressdialog)]
				</visible>
-->				
			</control>

			<control type="group">
				<right>140</right>
				<top>0</top>
				<control type="group">
					<control type="label">
						<description>Title</description>
						<label>$VAR[TopbarNowPlayingTitle]</label>
						<top>-10</top>
						<align>right</align>
						<height>48</height>
						<font>font36</font>
						<textcolor>highlight</textcolor>
					</control>
					<control type="label">
						<description>Album</description>
						<label>$VAR[TopbarNowPlayingArtistAlbum]</label>
						<top>45</top>
						<align>right</align>
						<height>40</height>
						<font>font16</font>
						<textcolor>highlight</textcolor>
					</control>
				</control>
			</control>
		</control>
	</control>


